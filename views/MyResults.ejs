<!DOCTYPE html>
<html lang="en">

<%- include('layouts/head'); %>

    <body class="d-flex flex-column h-100">
        <main class="flex-shrink-0">

            <%- include('layouts/navbar'); %>

                <!-- Header-->
                <header class="bg-darkk py-1">
                    <div class="container px-2">
                        <div class="row gx-5 align-items-center justify-content-center">
                            <div class="col-lg-8 col-xl-7 col-xxl-6">
                                <div class="my-5 text-center text-xl-start">
                                    <h1 class="display-5 fw-bolder mb-2">Result Portal
                                    </h1>
                                </div>
                            </div>
                            <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img
                                    class="img-fluid rounded-3 my-5 bannerimg" src="/assets/result.png" alt="result" />
                            </div>
                        </div>
                    </div>
                </header>

                <div id="mytestresult">

                    <table class="driverTestTable">
                        <tr>
                            <td>
                                <p class="resulthead"> Your Result </p>
                            </td>
                            <% if(myResultRetrieved.result) { %>
                                <td> <h6 style="color: rgb(22, 165, 30);">Pass </h6>  </td>
                            <% } %>
                            <% if(myResultRetrieved.result == false) { %>
                                <td> <h6 style="color: rgb(190, 22, 22);">Fail</h6> </td> 
                            <% } %>
                            <% if(myResultRetrieved.result == null) { %>
                                <td><h6 style="color: rgb(16, 14, 134);">Pending</h6> </td> 
                            <% } %>
                        </tr>

                        <tr>
                            <td>
                                <p class="resulthead">Comments</p>
                            </td>
                            <td>
                                <p><%=myResultRetrieved.comments %></p>
                            </td>
                        </tr>
                    </table>

                    
                </div>
                
        </main>
        


        <%- include('layouts/footer'); %>

            <%- include('layouts/script'); %>

    </body>

</html>